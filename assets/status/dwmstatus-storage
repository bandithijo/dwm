#!/bin/bash

icon="ÔÅª"
cap_percentage=$(df -h --output=pcent / | awk 'NR%2==0 {print $0}' | cut -f 1 -d '%' | xargs)
if   [[ "$cap_percentage" -ge 90 ]]; then
    echo "$icon $cap_percentage%"
elif [[ "$cap_percentage" -ge 80 ]] && [[ "$cap_percentage" -ge 89 ]]; then
    echo "$icon $cap_percentage%"
else
    echo "$icon $cap_percentage%"
fi
